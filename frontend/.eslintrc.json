{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb",
        "airbnb-typescript",
        "plugin:@next/next/recommended"
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "ignorePatterns": [
        "node_modules/",
        "env/",
        "tailwind.config.cjs",
        "next.config.mjs",
        "postcss.config.cjs",
        "env.mjs"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "off"
        ],
        "jsx-quotes": [
            "error",
            "prefer-single"
        ],
        "react/require-default-props": [
            "error",
            {
                "ignoreFunctionalComponents": true
            }
        ]
    }
}